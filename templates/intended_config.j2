!
! Hostname and basic info
!
hostname {{ device.name }}
{% if device.platform %}
! Platform: {{ device.platform.slug }}
{% endif %}
{% if device.location %}
! Location: {{ device.location.name }}
{% endif %}
{% if device.primary_ip4 %}
interface Loopback0
description Management
ip address {{ device.primary_ip4.address }}
{% else %}
! No primary IPv4 assigned
{% endif %}
!
! Interface Configuration
!
{% for iface in device.interfaces %}
{% if "Ethernet" in iface.name or "Gigabit" in iface.name or "FastEthernet" in iface.name %}
interface {{ iface.name }}
{% if iface.description %}description {{ iface.description }}{% endif %}
{% if iface.enabled %}no shutdown{% else %}shutdown{% endif %}
{% endif %}
{% endfor %}
!
! End of Config
!
